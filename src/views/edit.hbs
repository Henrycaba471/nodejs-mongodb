<div class="container">
    <div class="card card-body bg-dark p-4 text-white round-0">
        <h2>Actualizar una Tarea</h2>
        <form action="/edit/{{task._id}}" method="POST">
            <div>
                <input type="text" name="title" value="{{task.title}}" class="form-control round-0 bg-dark text-white">
            </div>
            <div>
                <textarea name="description" rows="5" class="form-control round-0 bg-dark text-white mt-2">{{task.description}}</textarea>
            </div>
            <button class="btn btn-primary btn-sm mt-2">Actualizar</button>
        </form>
    </div>
</div>